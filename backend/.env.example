# =============================================================================
# QUIRK AI KIOSK - Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Application will not start without these
# -----------------------------------------------------------------------------

# Anthropic API Key for Claude AI
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# -----------------------------------------------------------------------------
# ENVIRONMENT & DEPLOYMENT
# -----------------------------------------------------------------------------

# Environment: "development" or "production"
# WARNING: "development" enables debug logging and permissive CORS
ENVIRONMENT=production

# Server binding
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required for production)
# -----------------------------------------------------------------------------

# JWT Secret Key - Generate with: openssl rand -hex 32
# CRITICAL: Use a unique, random 64-character hex string in production
JWT_SECRET_KEY=your-super-secret-jwt-key-generate-with-openssl-rand-hex-32

# JWT Token expiration in minutes (default: 480 = 8 hours)
JWT_EXPIRATION_MINUTES=480

# API Key for service-to-service auth (optional)
# Generate with: openssl rand -hex 24
API_SERVICE_KEY=

# Admin API Key for dashboard access
# Generate with: openssl rand -hex 24
ADMIN_API_KEY=

# -----------------------------------------------------------------------------
# DATABASE (Optional - falls back to JSON file storage)
# -----------------------------------------------------------------------------

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
# Railway provides this automatically as DATABASE_URL
DATABASE_URL=

# Enable SQL query logging (development only)
SQL_ECHO=false

# -----------------------------------------------------------------------------
# CORS CONFIGURATION
# -----------------------------------------------------------------------------

# Comma-separated list of allowed origins (overrides defaults)
# Leave empty to use built-in defaults for Railway/Netlify/Vercel
CORS_ORIGINS=

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------

# AI chat requests per minute per session (default: 30)
AI_RATE_LIMIT_PER_MINUTE=30

# General API requests per minute per IP (default: 100)
API_RATE_LIMIT_PER_MINUTE=100

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES (Optional)
# -----------------------------------------------------------------------------

# ElevenLabs Text-to-Speech API Key
ELEVENLABS_API_KEY=

# ElevenLabs Voice ID (optional, uses default if not set)
ELEVENLABS_VOICE_ID=

# PBS DMS Integration (dealer management system)
PBS_API_KEY=
PBS_API_URL=

# CRM Integration
CRM_API_KEY=
CRM_API_URL=

# -----------------------------------------------------------------------------
# MONITORING & OBSERVABILITY (Optional)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking
# Get yours at: https://sentry.io/
SENTRY_DSN=

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured JSON logging (recommended for production)
JSON_LOGGING=true

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------

# Enable analytics collection
ENABLE_ANALYTICS=true

# Enable TTS (text-to-speech) feature
ENABLE_TTS=true

# Enable photo analysis for trade-ins
ENABLE_PHOTO_ANALYSIS=true
