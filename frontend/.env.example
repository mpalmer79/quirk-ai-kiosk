# =============================================================================
# QUIRK AI KIOSK - Frontend Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# Variables prefixed with REACT_APP_ are available in the browser
# =============================================================================

# -----------------------------------------------------------------------------
# API CONFIGURATION (Required)
# -----------------------------------------------------------------------------

# Backend API URL (include /api/v1 path)
# Local development: http://localhost:8000/api/v1
# Production: https://your-backend-domain.railway.app/api/v1
REACT_APP_API_URL=http://localhost:8000/api/v1

# -----------------------------------------------------------------------------
# KIOSK IDENTIFICATION
# -----------------------------------------------------------------------------

# Unique identifier for this kiosk (used in analytics)
REACT_APP_KIOSK_ID=KIOSK-001

# Dealership name displayed in UI
REACT_APP_DEALERSHIP=Quirk Chevrolet

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------

# Environment: development, staging, or production
REACT_APP_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------

# Enable/disable features
REACT_APP_ENABLE_TTS=true
REACT_APP_ENABLE_VOICE_INPUT=true
REACT_APP_ENABLE_PHOTO_UPLOAD=true
REACT_APP_ENABLE_QR_CODES=true

# -----------------------------------------------------------------------------
# MONITORING (Optional)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=

# -----------------------------------------------------------------------------
# ADMIN DASHBOARD (Optional)
# -----------------------------------------------------------------------------

# Admin API key for dashboard access (if not using JWT login)
# This should match ADMIN_API_KEY on the backend
# REACT_APP_ADMIN_API_KEY=
